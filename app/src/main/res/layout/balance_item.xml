<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balanceRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/balanceContainer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="start|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/balanceLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="الحسـاب:"
            android:textColor="#B9B9B9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/balanceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#6A6A6A"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notesContainer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/balanceContainer"
        android:gravity="start|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notesLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="ملاحظات:"
            android:textColor="#B9B9B9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#6A6A6A"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/notesContainer"
        android:gravity="start|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="التاريخ:"
            android:textColor="#B9B9B9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/balanceDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#6A6A6A"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>
